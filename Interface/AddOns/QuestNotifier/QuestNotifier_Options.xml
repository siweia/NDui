		<Frames>
			<CheckButton name="QNOchk_Switch" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="15" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if ( self:GetChecked() ) then
							QN_Settings.Switch = true;
							QNOchk_Instance:Enable();
							QNOchk_Raid:Enable();
							QNOchk_Party:Enable();
							QNOchk_Solo:Enable();
							QNOchk_Sound:Enable();
							QNOchk_Debug:Enable();
							QNOchk_NoDetail:Enable();
							QNOchk_CompleteX:Enable();
						else
							QN_Settings.Switch = false;
							QNOchk_Instance:Disable();
							QNOchk_Raid:Disable();
							QNOchk_Party:Disable();
							QNOchk_Solo:Disable();
							QNOchk_Sound:Disable();
							QNOchk_Debug:Disable();
							QNOchk_NoDetail:Disable();
							QNOchk_CompleteX:Disable();
						end
					</OnClick>
				</Scripts>
